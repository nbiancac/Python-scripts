set terminal postscript enhanced color solid 24

set output 'phase_beating_Y.eps'
set yrange[-0.01:0.05]
set xlabel "BPV position" 
set ylabel "Phase beating [Rad]"
p "../Phase_beating_test/QF60710/V_madx.dat" u 3 t "MADX" w p, \
  "../Phase_beating_test/QF60710/V_formula.dat" u 3 t "Analytical formula" w p,\
  "bpv.s" u ($1)+0.003 t "Matlab" w p, \
  "<paste Perturbed_lattice/fordrive.dat_liny Unperturbed_lattice/fordrive.dat_liny" every ::4 u ($6-$21)*6.28 t "Sussix" w p

reset

